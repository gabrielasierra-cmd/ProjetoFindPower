<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFDF6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentoria Financeira ✨"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#004D40"
        android:layout_marginBottom="16dp" />

    <ProgressBar
        android:id="@+id/progressIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="#004D40" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txtRespostaIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olá! Estou analisando as tuas finanças para te dar os melhores conselhos... Aguarda um momento."
            android:textSize="16sp"
            android:textColor="#333"
            android:lineSpacingExtra="4dp" />
    </ScrollView>

    <Button
        android:id="@+id/btnFecharMentoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entendido!"
        android:backgroundTint="#004D40"
        android:layout_marginTop="16dp" />

</LinearLayout>
