<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F6"
    android:padding="16dp">

    <!-- Cabeçalho -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IA Mentoria ✨"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#004D40" />

        <ProgressBar
            android:id="@+id/progressIA"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:indeterminateTint="#004D40" />
    </LinearLayout>

    <!-- Área de Mensagens estilo Chat -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/containerPergunta"
        android:layout_below="@id/header"
        android:layout_marginBottom="16dp"
        android:fillViewport="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@android:color/white">

            <TextView
                android:id="@+id/txtRespostaIA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Olá! Estou pronto para analisar as tuas finanças. O que gostarias de saber?"
                android:textSize="17sp"
                android:textColor="#2C3E50"
                android:lineSpacingExtra="6dp" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.core.widget.NestedScrollView>

    <!-- Contentor da Pergunta (O grande destaque) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerPergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFecharMentoria"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:strokeColor="#004D40"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp">

            <EditText
                android:id="@+id/editPergunta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Pergunta-me qualquer coisa..."
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:inputType="textCapSentences"
                android:maxLines="4"
                android:textSize="16sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEnviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_send"
                app:backgroundTint="#004D40"
                app:tint="@android:color/white"
                app:elevation="0dp"
                android:contentDescription="Enviar" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnFecharMentoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Sair da Mentoria"
        android:textAllCaps="false"
        android:textColor="#666"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

</RelativeLayout>
