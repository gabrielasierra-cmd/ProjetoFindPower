<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorias"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:paddingBottom="24dp" />

        <!-- LAZER -->
        <LinearLayout
            android:id="@+id/btnLazer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_gallery"
                app:tint="#FF9800"
                android:layout_marginEnd="16dp"
                android:contentDescription="Lazer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lazer"
                android:textSize="20sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- EMERGÊNCIA -->
        <LinearLayout
            android:id="@+id/btnEmergencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:layout_marginEnd="16dp"
                app:tint="#F44336"
                android:contentDescription="Emergência" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergência"
                android:textSize="20sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- CONTAS FIXAS -->
        <LinearLayout
            android:id="@+id/btnContasFixas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#3F51B5"
                android:layout_marginEnd="16dp"
                android:contentDescription="Contas Fixas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contas Fixas"
                android:textSize="20sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- POUPANÇA -->
        <LinearLayout
            android:id="@+id/btnPoupanca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_save"
                app:tint="#4CAF50"
                android:layout_marginEnd="16dp"
                android:contentDescription="Poupança" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poupança"
                android:textSize="20sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- EXTRAS -->
        <LinearLayout
            android:id="@+id/btnExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_add"
                app:tint="#9C27B0"
                android:layout_marginEnd="16dp"
                android:contentDescription="Extras" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extras"
                android:textSize="20sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- VIAGENS -->
        <LinearLayout
            android:id="@+id/btnViagens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_compass"
                app:tint="#03A9F4"
                android:layout_marginEnd="16dp"
                android:contentDescription="Viagens" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viagens"
                android:textSize="20sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- TODAS AS DESPESAS -->
        <LinearLayout
            android:id="@+id/btnTodasDespesas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#607D8B"
                android:layout_marginEnd="16dp"
                android:contentDescription="Todas as Despesas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todas as Despesas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
